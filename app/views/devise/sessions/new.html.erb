<div class="container-fluid">

  <h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<form class="form-horizontal">
  <div class="form-group">
    <label for="inputEmail2" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <%= f.email_field :email, class:"form-control",
      id:"inputEmail2", placeholder:"Email" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword2" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "off", id:"inputPassword2", placeholder:"Password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <div class="checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
  </div>
  <% end -%>

  <div class="action-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.submit "Log in", class:"btn btn-default" %>
    </div>
  </div>
<% end %>
</form>
</div>

<%= render "devise/shared/links" %>
