<div class="container-fluid">
  <h3><strong><%=@user.username %></strong> believes that <%= @user.personal_metaphysical_hero %> would totally dig any of these Grublets:</h3>
</div>

<div class="row">
  <div class="container-fluid">
     <% @user.recipes.each do |recipe| %>
     <div class="col-sm-6 col-md-4">
      <div class="panel panel-default panel-transparent">
       <div class="panel-body">
       <% if recipe.avatar_file_name != nil %>
          <%= image_tag recipe.avatar.url(:thumb) %>
       <% end %>
       <h2><%= link_to recipe.title, recipe %></h2>
       <h4>by <%= recipe.category %></h4>
       <p>
        <%= recipe.created_at.localtime.strftime("%I:%M%p, %b %d, %Y") %></p>
        <p><%= recipe.comments.count %> comments</p>
        <p>recipe.ratings.count</p>
        <p>recipe.ratings.average</p>
       </div>
      </div>
     </div>
     <% end %>
  </div>
</div>
