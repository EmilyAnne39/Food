<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container-fluid">
    <form class="form-horizontal">
      <div class="form group">
        <label for="inputTitle1" class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control", id:"inputTitle1", placeholder:"Title" %>
        </div>
      </div>
      <div class="form-group">
        <label for="inputIngred1" class="col-sm-2 control-label">Ingredients</label>
        <div class="col-sm-10">
          <%= f.text_area :recipe_ingredients, class:"form-control", id:"inputIngred1", placeholder:"Ingredient List", rows: 10 %>
        </div>
      </div>
      <div class="form-group">
        <label for="inputInstr1" class="col-sm-2 control-label">Instructions</label>
        <div class="col-sm-10">
          <%= f.text_area :recipe_instructions, class:"form-control", id:"inputIngred1", placeholder:"Instructions", rows: 20 %>
        </div>
      </div>
      <div class="form-group cant-see-me">
        <%= f.number_field :user_id, value: current_user.id %>
      </div>
      <div class="action-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.submit "Publish", class:"btn btn-default"%>
          <%= link_to 'Back', :back, class:"btn btn-default" %>
        </div>
      </div>
    </form>
  </div>
<% end %>
